<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studycardcreator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudyCardCreator">

        <activity
            android:name=".ui.theme.MainActivity"
            android:theme="@style/AppTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.theme.CreateFlashcardActivity"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity
            android:name=".ui.theme.ViewFlashcardActivity"
            android:theme="@style/Theme.AppCompat">
            </activity>
        <activity
            android:name=".ui.theme.StudyFlashcardActivity"
            android:theme="@style/Theme.AppCompat">
        </activity>

    </application>

</manifest>
