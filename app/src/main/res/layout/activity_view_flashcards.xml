<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.theme.ViewFlashcardActivity">

    <ListView
        android:id="@+id/flashcard_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_delete"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/transparent" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/primaryColor"
        android:text="Delete Flashcards"
        android:textColor="#FFF"
        android:visibility="gone" />

    <Button
        android:id="@+id/delete_selected_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Selected"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/primaryDarkColor"
        android:textColor="@color/white"
        android:padding="10dp" />

    <Button
        android:id="@+id/delete_all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete All"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/delete_selected_button"
        android:background="@color/primaryDarkColor"
        android:textColor="@color/white"
        android:padding="10dp" />

</RelativeLayout>
